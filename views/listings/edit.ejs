<% layout("./layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <legend>Edit this listing:</legend>
                    <div class="mb-3">
                        <label for="title" class="form-label">Enter the Title</label>
                        <input type="text" id="title" name="listing[title]" value="<%=listing.title%>"
                            class="form-control" required>
                        <div class="invalid-feedback">Enter valid Title</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Enter the description</label>
                        <textarea id="description" name="listing[description]" value="<%=listing.description%>"
                            class="form-control" cols="20" rows="5" required><%=listing.description%></textarea>
                        <div class="invalid-feedback">Enter valid Short descripyion</div>
                    </div>

                    <div class="mb-3">
                        <p>Original Listing Image</p>
                        <img src="<%=originalImageUrl%>" alt="Listing Image" height="250px" width="300">
                    </div>
                    <div class="mb-3">
                        <label for="url" class="form-label">Upload New Image</label>
                        <input type="file" id="url" name="listing[image][url]" class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Enter the price</label>
                            <input id="price" name="listing[price]" value="<%=listing.price%>" class="form-control"
                                required>
                            <div class="invalid-feedback">Enter valid Price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Enter the country</label>
                            <input type="text" id="country" name="listing[country]" value="<%=listing.country%>"
                                class="form-control" required>
                            <div class="invalid-feedback">Country name should be valid</div>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-label">Enter the location</label>
                        <input type="text" id="location" name="listing[location]" value="<%=listing.location%>"
                            class="form-control" required>
                        <div class="invalid-feedback">Enter valid location</div>
                    </div>



                    <button class="btn btn-primary mt-3 edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </body>